<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd

    http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit-1.5.xsd">

    <bean id="jsonMessageConverter" class="org.springframework.amqp.support.converter.JsonMessageConverter"></bean>


    <!--virtual host /trade-->
    <rabbit:connection-factory id="connectionFactory" addresses="mq201.dev.rs.com:5672,mq202.dev.rs.com:5672" username="dev" password="dev_user" virtual-host="/trade"/>
    <rabbit:admin id="admin1" connection-factory="connectionFactory"/>


    <rabbit:queue id="longyan" name="${rabbitmq.mq.trade.oc.longyan}" durable="true" auto-delete="false" exclusive="false" declared-by="admin1"/>

    <rabbit:direct-exchange id="longyanAsync" name="longyanAsync" durable="true" auto-delete="false" declared-by="admin2">
        <rabbit:bindings>
            <rabbit:binding queue="longyan"></rabbit:binding>
        </rabbit:bindings>
    </rabbit:direct-exchange>

    <rabbit:template id="testAmqpTemplate" exchange="longyanAsync" connection-factory="connectionFactory" routing-key="test"/>


</beans>